  <script>
    function saveWindow() {
      var c = confirm("Do you wish to save?");
      console.log(dataArr.users[user_index].playbooks[playbook_index]);
      if (c) {
        var i = 0;
        var dupe = false;
        var next = dataArr.users[user_index].playbooks[playbook_index].plays.length + 1;
        var n = prompt("Please enter a name for this play", "Play_" + next);
        if (n == null) {
          return;
        }
        while (i < dataArr.users[user_index].playbooks[playbook_index].plays.length) {
          console.log(n + " compared with " + dataArr.users[user_index].playbooks[playbook_index].plays[i].name);
          if (dataArr.users[user_index].playbooks[playbook_index].plays[i].name == n) {
            dupe = true;
            break;
          }
          i++;
        }
        if (!dupe) {
          savePlay(n, false, null);
        }
        else {
          recursiveSave(n, next, i);
        }
      }
    }

    function recursiveSave(n, next, i) {
      var a = confirm("Overwrite play?");
      if (a) {
        savePlay(n, true, i);
      }
      else {
        var nn = prompt("Please enter a different name for this play", "Play_" + next);
        if (nn == null) {
          return;
        }
        if (n == nn) {
          recursiveSave(nn, next, i);
        }
        else {
          savePlay(nn, false, null);
        }
      }
    }

    function eraserWindow() {
      confirm("Placeholder for eraser functionality");
    }
  </script>
